<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="1dp"
    android:background="@drawable/set_border_top_2">

    <TextView
        android:id="@+id/calDayText"
        android:layout_width="match_parent"
        android:layout_height="13sp"
        android:gravity="center"
        android:textColor="@color/darkgray"
        android:textSize="11sp" />

    <LinearLayout
        android:id="@+id/calBalanceBg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="18sp"
        android:gravity="right">

        <TextView
            android:id="@+id/calBalancePlusMinus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="9sp"
            android:textColor="#FFFFFF" />

        <TextView
            android:id="@+id/calBalanceText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="1dp"
            android:textSize="9sp"
            android:textColor="#FFFFFF" />
    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/calRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="33sp"
        android:padding="2dp" />

    <View
        android:id="@+id/calAlphaView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:alpha="0.0"
        android:background="@color/white" />

</RelativeLayout>