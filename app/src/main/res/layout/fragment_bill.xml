<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:orientation="vertical"
    tools:context=".BillFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="소비 내역 확인"
            android:textColor="@color/colorPrimaryDark"
            android:textStyle="bold"
            android:textSize="18sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="right">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginRight="5dp"
                android:text="잔액"
                android:textSize="13sp"
                android:textColor="@color/darkgray" />

            <TextView
                android:id="@+id/billBalanceText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:text="10000"
                android:textSize="21sp"
                android:textStyle="bold"
                android:textColor="@color/black" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:layout_gravity="bottom"
                android:text="원"
                android:textSize="13sp"
                android:textColor="@color/darkgray" />

        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="3dp"
        android:layout_height="2dp"
        android:background="@color/lightgray" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="13dp"
                android:text="기간"
                android:textSize="16sp"
                android:textColor="@color/darkgray"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:orientation="horizontal"
                android:layout_marginTop="5dp"
                android:background="@drawable/set_border_radius">

                <Button
                    android:id="@+id/billButton1"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:paddingLeft="5dp"
                    android:background="@android:color/transparent"
                    android:textColor="@color/darkgray"
                    android:textSize="13sp"
                    android:text="2주일" />

                <View
                    android:layout_width="2dp"
                    android:layout_marginTop="2dp"
                    android:layout_height="match_parent"
                    android:background="@color/lightgray" />

                <Button
                    android:id="@+id/billButton2"
                    android:layout_width="0dp"
                    android:layout_weight="0.9"
                    android:layout_height="match_parent"
                    android:background="@android:color/transparent"
                    android:textColor="@color/darkgray"
                    android:textSize="13sp"
                    android:text="1개월" />

                <View
                    android:layout_width="2dp"
                    android:layout_marginTop="2dp"
                    android:layout_height="match_parent"
                    android:background="@color/lightgray" />

                <Button
                    android:id="@+id/billButton3"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:paddingRight="5dp"
                    android:background="@android:color/transparent"
                    android:textColor="@color/darkgray"
                    android:textSize="13sp"
                    android:text="3개월" />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="13dp"
                android:text="타입"
                android:textSize="16sp"
                android:textColor="@color/darkgray"/>

            <LinearLayout
                android:id="@+id/billType"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:orientation="horizontal"
                android:layout_marginTop="5dp"
                android:clickable="true"
                android:background="@drawable/set_border_radius">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:layout_marginLeft="20dp">

                    <View
                        android:id="@+id/billTypeView"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:background="@color/bluegreen" />

                    <TextView
                        android:id="@+id/billTypeText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:textColor="@color/darkgray"
                        android:textSize="13sp"
                        android:text="식비"/>
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:layout_height="2dp"
            android:background="@color/lightgray" />

        <ListView
            android:id="@+id/billListView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/set_border_except_top"/>

    </LinearLayout>

</LinearLayout>